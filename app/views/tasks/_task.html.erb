<div class="panel panel-info">
  <div class="panel-heading">
  	<%= link_to edit_task_path(task) do %>
  		created <%= time_ago_in_words(task.created_at) %> ago
  	<% end %>

  	<%= link_to 'x', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
  </div>
  <div class="panel-body"><%= raw(task.content_html) %></div>

  <div class="panel-footer text-right">
  	<div class="btn-group btn-group-justified">
	  	<% if task.status == "doing" %>
			<%= link_to "<i class='fa fa-chevron-left'></i>".html_safe, change_task_path(task, status: "to_do"), method: :put, class: "btn btn-info btn-md btn-block" %>
			<%= link_to "<i class='fa fa-chevron-right'></i>".html_safe, change_task_path(task, status: "done"), method: :put, class: "btn btn-info btn-md btn-block" %>
		<% elsif task.status == "done" %>
			<%= link_to "<i class='fa fa-chevron-left'></i>".html_safe, change_task_path(task, status: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %>
		<% else %>
			<%= link_to "<i class='fa fa-chevron-right'></i>".html_safe, change_task_path(task, status: "doing"), method: :put, class: "btn btn-info btn-md btn-block" %>
		<% end %>
	</div>
  </div>
</div> 